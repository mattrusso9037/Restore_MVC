package controller;

import java.io.IOException;
import java.net.URL;
import java.util.ResourceBundle;

import javafx.event.ActionEvent;
import javafx.fxml.FXML;
import javafx.fxml.FXMLLoader;
import javafx.fxml.Initializable;
import javafx.scene.Node;
import javafx.scene.Parent;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.Hyperlink;
import javafx.scene.control.Label;
import javafx.scene.control.TableColumn;
import javafx.scene.control.TableView;
import javafx.scene.image.ImageView;
import javafx.scene.input.MouseEvent;
import javafx.stage.Stage;
import model.ItemBag;
import model.User;
import model.UserBag;
import view.Main;

public class MainController implements Initializable {

	public static UserBag userBag = new UserBag();
	public static ItemBag itemBag = new ItemBag();
	private int typeID;

	public int getTypeID() {
		return typeID;
	}

	public void setTypeID(int typeID) {
		this.typeID = typeID;
	}

	Main main = new Main();
	@FXML
	private Hyperlink signInLink;
	@FXML
	private ImageView woodImage;
	@FXML
	private ImageView couchImage;
	@FXML
	private ImageView windowImage;
	@FXML
	private ImageView doorImage;
	@FXML
	private Button addButton;
	@FXML
	private Label welcomeLabel = null;

	User user = new User();

	@Override
	public void initialize(URL location, ResourceBundle resources) {
		// TODO Auto-generated method stub
		userBag.load();
		itemBag.load();
		addButton.setVisible(true);

		System.out.println("current: " + userBag.getCurrent());
		System.out.println("admin: " + userBag.getAdmin());

		// if (!userBag.getUserMap().containsKey("admin")) {
		//
		// user.setFirstName("admin");
		// user.setPassword("1234");
		// user.setUsername("admin");
		// userBag.addUser(user.getUsername(), user);
		//
		// }
		//
		// userBag.setAdmin(user);
		// userBag.setCurrent(userBag.getAdmin());

		if (userBag.getUserMap().containsKey("admin")) {
			System.out.println("admin already exists");
		} else {
			User admin = new User("admin", null, "admin", "1234");

			userBag.addUser("admin", admin);
			userBag.setAdmin("1234");
		}

		if (userBag.getCurrent() != null) {
			welcomeLabel.setText("Welcome " + userBag.getCurrent().getFirstName());
		}
		// button hide
		if (userBag.getCurrent() != null && userBag.getCurrent().getUsername().equals("admin")) {

			if (userBag.getCurrent().getUsername().equals(userBag.getAdmin().getUsername())) {

			}
			addButton.setVisible(true);
		}
	}

	public void woodImageFire(MouseEvent event) {
		System.out.println("wood clicked");
		setTypeID(0);
		System.out.println("wood typeID main: " + getTypeID());
		
		Node node = (Node) event.getSource();
		Stage stage = (Stage) node.getScene().getWindow();
		Parent root = null;

		try {
			root = FXMLLoader.load(getClass().getResource("/view/browseView.fxml"));

		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		Scene scene = new Scene(root);
		
		stage.setScene(scene);
		
	
	}

	public void couchFire(MouseEvent event) {
		setTypeID(1);
		System.out.println("couch typeID main: " + getTypeID());

		Node node = (Node) event.getSource();
		Stage stage = (Stage) node.getScene().getWindow();
		Parent root = null;

		try {
			root = FXMLLoader.load(getClass().getResource("/view/browseView.fxml"));

		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		Scene scene = new Scene(root);
		
		stage.setScene(scene);
		

	}

	public void windowFire(MouseEvent event) {
		System.out.println("window clicked");
	}

	public void doorFire(MouseEvent event) {
		System.out.println("door clicked");
	}

	public void addButtonFire(ActionEvent event) {

		switchView("/view/addItemView.fxml", event);

	}

	public void signInLinkFire(ActionEvent event) {

		switchView("/view/loginView.fxml", event);
	}

	public Label getWelcomeLabel() {
		return welcomeLabel;
	}

	public void setWelcomeLabel(Label welcomeLabel) {
		this.welcomeLabel = welcomeLabel;
	}

	public void switchView(String viewName, ActionEvent event) {
		Node node = (Node) event.getSource();
		Stage stage = (Stage) node.getScene().getWindow();
		Parent root = null;

		try {
			root = FXMLLoader.load(getClass().getResource(viewName));
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		Scene scene = new Scene(root);
		stage.setScene(scene);

	}

}
