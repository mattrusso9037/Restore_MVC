public class ImageBag {
	private Map<String, Image> imageMap = new HashMap<String, Image>();
	private Map<String, String> fileMap = new HashMap<String, String>();
	
	public void addImage(String fileName, Image image) {

	imageMap.put(fileName, image);
	    }
	public void addFile(String source, String destination) {

		fileMap.put(source, destination);
		    }
	

	public Map<String, Image> getImageMap() {
		return imageMap;
	}



	
	public void save(String filename, String imageName) {

		
		BufferedImage bufferedImage = null;
		
		
		try {
			File image = new File(filename);
			bufferedImage = ImageIO.read(image);
			ImageIO.write(bufferedImage, "png", new File("images/" + imageName));
			
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		System.out.println("sucess");

	}

	public void load(String filename, ImageView imageView) {
		BufferedImage bufferedImage = null;
		File file = new File(filename);
		
		try {
			bufferedImage = ImageIO.read(file);
			
			if (file.exists()) {
				imageView.setImage(SwingFXUtils.toFXImage(bufferedImage, null));
} 
				
			
		} catch (IOException e) {
			// TODO Auto-generated catch block
			System.out.println("nothing to load");
		}

//		FileInputStream fileInput = null;
//		ObjectInputStream objectInput = null;
//
